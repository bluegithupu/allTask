        <property name="serverIP">
            <value>sandboxapp.cloopen.com</value>
        </property>
        <property name="serverPort">
            <value>8883</value>
        </property>
        <!--//******************************注释*********************************************-->
        <!--//*初始化主帐号和主帐号令牌,对应官网开发者主账号下的ACCOUNT SID和AUTH TOKEN     *-->
